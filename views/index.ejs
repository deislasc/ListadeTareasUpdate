<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Todo List</title>
  <link rel="stylesheet" href="/css/styles.css"> <!-- Ruta corregida -->
</head>
<body>
  <div class="container">
    <h1>Listado de Tareas</h1>
    <form id="newTaskForm">
      <div class="form-group">
        <label for="taskName">Nueva Tarea</label>
        <input type="text" id="taskName" name="name" placeholder="Escribe una nueva tarea" required>
      </div>
      <div class="form-group">
        <label for="startDate">Fecha de Inicio</label>
        <input type="date" id="startDate" name="startDate" required>
      </div>
      <div class="form-group">
        <label for="endDate">Fecha de Fin</label>
        <input type="date" id="endDate" name="endDate" required>
      </div>
      <button type="submit">Agregar</button>
    </form>

    <table>
      <thead>
        <tr>
          <th>Nombre de Tarea</th>
          <th>Fecha de Inicio</th>
          <th>Fecha de Fin</th>
          <th>Finalizar</th>
          <th>Eliminar</th>
        </tr>
      </thead>
      <tbody id="tasksTableBody">
        <% tasks.forEach(task => { %>
          <tr id="task-<%= task._id %>">
            <td><%= task.name %></td>
            <td><%= new Date(task.startDate).toLocaleDateString() %></td>
            <td><%= new Date(task.endDate).toLocaleDateString() %></td>
            <td class="centered-cell">
              <!-- Formulario para marcar una tarea como completada -->
              <form class="inline-form complete-form" data-id="<%= task._id %>">
                <button class="complete-btn" type="submit"><%= task.completed ? "✔" : "❌" %></button>
              </form>
            </td>
            <td class="centered-cell">
              <!-- Formulario para eliminar una tarea -->
              <form class="inline-form delete-form" data-id="<%= task._id %>">
                <button class="delete-btn" type="submit">Eliminar</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script>
    $(document).ready(function() {
      // Enviar solicitud para agregar una nueva tarea
      $('#newTaskForm').on('submit', function(event) {
        event.preventDefault();
        const formData = {
          name: $('#taskName').val(),
          startDate: $('#startDate').val(),
          endDate: $('#endDate').val()
        };

        $.ajax({
          type: 'POST',
          url: '/api/tasks/new',
          data: JSON.stringify(formData),
          contentType: 'application/json',
          success: function(response) {
            // Recargar la lista de tareas sin recargar la página
            loadTasks();
            // Limpiar el formulario
            $('#newTaskForm')[0].reset();
          },
          error: function(error) {
            console.error('Error al agregar la tarea:', error);
          }
        });
      });

      // Enviar solicitud para marcar una tarea como completada
      $(document).on('submit', 'form.complete-form', function(event) {
        event.preventDefault();
        const taskId = $(this).data('id');

        $.post(`/api/tasks/${taskId}/complete`, function() {
          loadTasks();
        });
      });

      // Enviar solicitud para eliminar una tarea
      $(document).on('submit', 'form.delete-form', function(event) {
        event.preventDefault();
        const taskId = $(this).data('id');

        $.ajax({
          type: 'POST',
          url: `/api/tasks/${taskId}/delete`,
          success: function(response) {
            // Remover la fila de la tarea eliminada sin recargar la página
            $(`#task-${taskId}`).remove();
          },
          error: function(error) {
            console.error('Error al eliminar la tarea:', error);
          }
        });
      });

      // Función para cargar y renderizar las tareas
      function loadTasks() {
        $.get('/api/tasks', function(tasks) {
          const tasksTableBody = $('#tasksTableBody');
          tasksTableBody.empty();
          tasks.forEach(task => {
            tasksTableBody.append(`
              <tr id="task-${task._id}">
                <td>${task.name}</td>
                <td>${new Date(task.startDate).toLocaleDateString()}</td>
                <td>${new Date(task.endDate).toLocaleDateString()}</td>
                <td class="centered-cell">
                  <form class="inline-form complete-form" data-id="${task._id}">
                    <button class="complete-btn" type="submit">${task.completed ? "✔" : "❌"}</button>
                  </form>
                </td>
                <td class="centered-cell">
                  <form class="inline-form delete-form" data-id="${task._id}">
                    <button class="delete-btn" type="submit">Eliminar</button>
                  </form>
                </td>
              </tr>
            `);
          });
        });
      }

      // Inicialmente cargar y renderizar las tareas
      loadTasks();
    });
  </script>
</body>
</html>
